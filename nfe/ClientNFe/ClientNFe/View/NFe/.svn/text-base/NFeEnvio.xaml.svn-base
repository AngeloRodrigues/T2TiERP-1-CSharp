<Window x:Class="ClientNFe.View.NFe.NFeEnvio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Envio da NF-e" Height="500" Width="450" ShowInTaskbar="True" ResizeMode="CanResize" Topmost="False" WindowStartupLocation="CenterScreen" WindowState="Normal" Background="#FFD4D0C8" Loaded="Window_Loaded" Closing="Window_Closing">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" Height="80">
            <ProgressBar Margin="20,0" Height="20" Name="pbEnvio"></ProgressBar>
            <Label Content="Status da solicitação:" Height="28" HorizontalAlignment="Left" Margin="20,6,0,0" Name="label1" VerticalAlignment="Top" />
        </Grid>
        <StackPanel DockPanel.Dock="Bottom">
            <Button Name="btSair" Width="100" Visibility="Hidden" Click="btSair_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Imagem/21botaoSair.png" Height="23"></Image>
                    <TextBlock Text="Sair" Margin="3,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </Button>            
        </StackPanel>
        <ListBox Name="lbEnvio"></ListBox>
    </DockPanel>
</Window>
